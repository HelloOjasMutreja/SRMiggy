# Supabase Database Configuration
# Copy this file to .env and fill in your actual Supabase credentials

# Supabase Project Reference (found in Settings > Database)
# Example: abcdefghijklmnop
SUPABASE_PROJECT_REF=your-project-ref-here

# Supabase Database Password (set during project creation)
SUPABASE_DB_PASSWORD=your-supabase-password-here

# Full Database URL (automatically constructed from above)
# Format: jdbc:postgresql://db.${SUPABASE_PROJECT_REF}.supabase.co:5432/postgres
DATABASE_URL=jdbc:postgresql://db.your-project-ref-here.supabase.co:5432/postgres

# JWT Secret (change this for production)
JWT_SECRET=srmiggy2024secretkeyforsigningjwttokenspleasechangeinproduction

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Spring Profile (use 'supabase' for Supabase, leave empty for H2)
SPRING_PROFILES_ACTIVE=supabase

# Database Configuration (optional overrides)
DB_USERNAME=postgres
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5
